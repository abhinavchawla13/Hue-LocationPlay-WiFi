<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PHMyApplicationActivity" >

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="distance"
        android:layout_below="@+id/buttonRand"
        android:layout_alignRight="@+id/homeLocation"
        android:layout_alignEnd="@+id/homeLocation" />
    
    <Button
        android:id="@+id/buttonRand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" android:paddingLeft="10dp" android:paddingRight="10dp"
        android:layout_below="@+id/longitudeText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude"
        android:id="@+id/latitudeText"
        android:layout_above="@+id/longitudeText"
        android:layout_alignLeft="@+id/longitudeText"
        android:layout_alignStart="@+id/longitudeText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude"
        android:id="@+id/longitudeText"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/buttonRand"
        android:layout_alignStart="@+id/buttonRand" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Home"
        android:id="@+id/setHome"
        android:layout_above="@+id/latitudeText"
        android:layout_alignRight="@+id/distance"
        android:layout_alignEnd="@+id/distance"
        android:layout_marginBottom="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="homeLocation"
        android:id="@+id/homeLocation"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/latitudeText"
        android:layout_alignStart="@+id/latitudeText"
        android:layout_marginTop="51dp" />

</RelativeLayout><!-- From: file:/D:/GitHub/Hue-LocationPlay-WiFi/app/src/main/res/layout/activity_main.xml -->