<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PHMyApplicationActivity"
    android:background="@drawable/bg"
    android:clickable="false"
    android:screenOrientation="portrait">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connection Strength"
        android:id="@+id/connectionStrength"
        android:layout_marginBottom="180dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/refresh"
        android:background="@drawable/refresh"
        android:clickable="true"
        android:layout_above="@+id/connectionStrength"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:id="@+id/presentWiFiText"
        android:layout_marginTop="10dp"
        android:editable="true"
        android:layout_toLeftOf="@+id/hueButton"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/hueWiFi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Present WiFi Connection SSID:"
        android:id="@+id/hueWiFi"
        android:layout_alignBottom="@+id/presentWiFiText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Hue&apos;s WiFi SSID:"
        android:id="@+id/presentWiFi"
        android:layout_alignBottom="@+id/hueWiFiText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:id="@+id/hueWiFiText"
        android:editable="true"
        android:textSize="16sp"
        android:layout_below="@+id/presentWiFiText"
        android:layout_toLeftOf="@+id/hueButton"
        android:layout_alignStart="@+id/presentWiFiText" />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/hueButton"
        android:background="@drawable/edit"
        android:layout_alignBottom="@+id/hueWiFiText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="6dp"
        android:clickable="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Connection Status:"
        android:id="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/presentWiFi"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/status"
        android:background="@drawable/no"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/hueWiFiText" />

</RelativeLayout>